@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<link rel="stylesheet" href="~/common/css/fotorama.css">

<div class="main_visual" id="slider-area">
    <div class="fotorama pc" id="slider-for-pc" data-width="970" data-ratio="970/450" data-max-width="100%" data-loop="true" data-autoplay="true" data-stopautoplayontouch="false">
    </div>
    <div class="fotorama mobile" id="slider-for-mobile" data-width="970" data-ratio="1/1" data-max-width="100%" data-loop="true" data-autoplay="true" data-stopautoplayontouch="false" data-click="false">
    </div>
</div>
<!-- //main_banner -->
<div id="content">
    <!-- middle_contents -->
    <div class="cont_area row">
        <!-- //middle_conts1 -->
        <div class="col-item">
            <div class="cont_box notice">
                <h2>NOTICE</h2>
                <div id="notice">
                    <div id="noticeYg" class="list_box">
                        <ul id="notice-area" >
                        </ul>
                    </div>
                </div>
                <span class="btn_more" id="allspan"><a href="thong-bao">mở rộng</a></span>
            </div>
        </div>
        <!-- //middle_conts1 -->
        <!-- //middle_conts2 -->
        <div class="col-item">
            <div class="cont_box mv">
                <h2>VIETSUB</h2>
                <div id="mv" class="movie_box">
                    <div class="banner" id="album-area">

                    </div>
                </div>
                <span class="btn_more"><a href="albums">more</a></span>
            </div>
        </div>
        <!-- //middle_conts2 -->
        <!-- //middle_conts3 -->
        <div class="col-item">
            <div class="cont_box advertise">
                <img src="~/images/main/advertise01.jpg" />
            </div>
        </div>
        <!-- //middle_conts3 -->
        <!-- //middle_conts4 -->
        <div class="col-item">
            <div class="cont_box advertise">
                <img src="~/images/main/advertise01.jpg" />
            </div>
        </div>
    </div>

</div>


@section scripts {
    <!--This script to make event slider work.-->
    <script type="text/javascript">
        $(document).load(function () {
            $('#visual').slideBox();
            $('#mv').slideBox({ animation: 400, interval: 4000 });
            $('#network').slideBox({ animation: 400, interval: 4000 });
            $('.tab a').bind('click', function () {
                $('.tab a').removeClass('on');
                $(this).addClass('on');
                $('#notice .list_box').hide();
                $($(this).attr('href')).show();
                return false;
            });
        })
    </script>
    <script type="text/javascript" src="~/js/homepage.js">
    </script>

    <script src="~/common/js/fotorama.js"></script>
}